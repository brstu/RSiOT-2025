{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App11 Monitoring Values",
  "type": "object",
  "properties": {
    "namespace": {
      "type": "string",
      "description": "Namespace for deployment"
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of replicas"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "prefix": {
          "type": "string",
          "pattern": "^app11_$",
          "description": "Metrics prefix must be app11_"
        },
        "enabled": {
          "type": "boolean",
          "description": "Enable metrics collection"
        }
      },
      "required": ["prefix", "enabled"]
    }
  },
  "required": ["namespace", "replicaCount", "metrics"]
}