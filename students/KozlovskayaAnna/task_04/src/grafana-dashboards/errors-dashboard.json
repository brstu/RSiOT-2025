          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "pointradius": 2,
        "legend": {
          "show": true,
          "values": true,
          "avg": true,
          "current": true,
          "max": true,
          "min": true
        },
        "thresholds": [
          {
            "value": 2.5,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true,
            "yaxis": "left"
          }
        ],
        "alert": {
          "name": "High 5xx Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [2.5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "15m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ]
        }
      },
