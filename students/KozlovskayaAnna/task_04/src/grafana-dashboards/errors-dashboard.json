            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 3, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            },
            "decimals": 2
          }
        }
      },
      {
        "id": 4,
        "title": "5xx Error Rate Over Time (15m window)",
        "type": "graph",
        "targets": [
          {
            "expr": "(sum(rate(app08_http_errors_5xx_total[15m])) / sum(rate(app08_http_requests_total[15m]))) * 100",
