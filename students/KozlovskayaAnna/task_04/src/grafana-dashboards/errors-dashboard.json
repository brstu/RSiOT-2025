{
  "dashboard": {
    "title": "Error Rate - Variant 8",
    "tags": ["monitoring", "errors", "variant-8", "as63-220012-v8"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "5xx Error Rate (SLO: <2.5%)",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(app08_http_errors_5xx_total[15m])) / sum(rate(app08_http_requests_total[15m]))) * 100",
            "legendFormat": "5xx Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1.5, "color": "yellow"},
                {"value": 2.5, "color": "red"}
              ]
            },
            "decimals": 2
          }
        }
      },
      {
        "id": 2,
        "title": "4xx Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(app08_http_errors_4xx_total[5m])) / sum(rate(app08_http_requests_total[5m]))) * 100",
            "legendFormat": "4xx Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            },
            "decimals": 2
          }
        }
      },
      {
        "id": 3,
        "title": "Total Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(app08_http_requests_total{status=~\"4..|5..\"}[5m])) / sum(rate(app08_http_requests_total[5m]))) * 100",
